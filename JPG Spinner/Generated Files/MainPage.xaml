                  Fill="White"
                  Margin="0,100,0,0"
                  Opacity="0.02"
                  Stretch="Uniform">
            </Path>
        </Grid>
        <Frame x:Name="ScenarioFrame" Grid.Column="1"/>
    </Grid>
</Page>

