                    <Path.RenderTransform>
                        <RotateTransform/>
                    </Path.RenderTransform>
                </Path>
                <TextBlock x:Name="AppTitle"
                           Style="{StaticResource SampleHeaderTextStyle}"
                           Text="JPG Spinner"
                           TextWrapping="Wrap"/>
            </StackPanel>
            <Button x:ConnectionId='1' x:Name="ButtonSelectFiles" x:Uid="ButtonSelectFiles"
                    Grid.Row="2"
                                        
                    Content="Select Files"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     
                    FontSize="20"
                    FontWeight="Bold"/>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical">
                            <ToggleSwitch x:ConnectionId='6' x:Name="CheckBoxProgressive" x:Uid="CheckBoxProgressive"
                                          Header="Progressive"
                                                                             
                                          Margin="-6,0,0,-10"
                                                                               />
                            <TextBlock x:ConnectionId='7' x:Name="TextBlockProgressive" x:Uid="TextBlockProgressive"
                                       Text="Apply progressive encoding to each rotated image …"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,10,0,0"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                                                                             >
            			        <ToolTipService.ToolTip>
            				        <ToolTip x:Uid="ToolTipProgressive" Content="Click here to see more information about this option" Placement="Bottom"/>
            			        </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,20,0,0" VerticalAlignment="Top">
                            <ToggleSwitch x:ConnectionId='4' x:Name="CheckBoxCrop" x:Uid="CheckBoxCrop"
                                          Header="Crop"
                                                                      
                                          Margin="-6,0,0,-10"
                                                                        />
                            <TextBlock x:ConnectionId='5' x:Name="TextBlockCrop" x:Uid="TextBlockCrop"
                                       Text="If necessary, remove some edge pixels to enable lossless rotation of the rest of the image …"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,10,0,0"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                                                                      >
            			        <ToolTipService.ToolTip>
            				        <ToolTip x:Uid="ToolTipCrop" Content="Click here to see more information about this option" Placement="Bottom"/>
            			        </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <StackPanel Grid.Row="4" Orientation="Vertical" VerticalAlignment="Bottom">
                <Border x:Name="DebugBorder" Visibility="Collapsed">
                    <TextBlock x:Name="DebugText" FontWeight="Bold" MaxHeight="100" TextTrimming="CharacterEllipsis" Margin="20,10,20,10" TextWrapping="Wrap" Text=""/>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <HyperlinkButton x:ConnectionId='2'                               Content="&#xA9; Hadden Industries Ltd" FontWeight="Normal" Foreground="White" HorizontalAlignment="Center" Tag="http://haddenindustries.com/"/>
                <StackPanel x:Name="FooterPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                    <HyperlinkButton x:ConnectionId='3' x:Uid="HyperlinkButtonTerms" Content="Terms &amp; Conditions"                               Tag="http://haddenindustries.com/legal.html" FontSize="12" Style="{StaticResource HyperlinkStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
