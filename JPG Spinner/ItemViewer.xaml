<UserControl x:Class="JPG_Spinner.ItemViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:JPG_Spinner"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid HorizontalAlignment="Left" Background="#140044">
        <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
            <Image x:Name="image" RenderTransformOrigin=".5,.5" Height="196" Width="196" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <StackPanel Margin="0,0,0,0" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock x:Name="titleTextBlock" TextWrapping="Wrap" FontSize="14.667" FontWeight="Light" Width="200" FontFamily="Segoe UI"/>
                <TextBlock x:Name="categoryTextBlock" TextWrapping="Wrap" FontSize="14.667" FontWeight="Light" Width="200" MaxHeight="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>